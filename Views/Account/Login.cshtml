@model TicketPortal.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="container mt-5">
    <h2 class="text-center mb-4">Přihlášení</h2>
    <div class="card shadow-lg mx-auto" style="max-width: 600px; padding: 20px;">
        <div class="card-body">
            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="font-weight-bold form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Zadejte svůj e-mail" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-5">
                    <label asp-for="Password" class="font-weight-bold form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Zadejte své heslo" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-primary btn-block">Přihlásit se</button>
                    <a asp-action="Register" asp-controller="Account" class="mt-3 nav-link">Nemáte účet? Registrovat se</a>
                </div>
            </form>
            
        </div>
    </div>
</div>

    
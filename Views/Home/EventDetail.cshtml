@model TicketPortal.ViewModels.EventDetailViewModel

@{
    ViewData["Title"] = Model.Event.Name;
}

<div class="container my-5">
    <h1 class="display-4 font-weight-bold">@Model.Event.Name</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Event.Image" class="img-fluid rounded shadow-sm" alt="@Model.Event.Name" style="height: 300px; object-fit: cover;">
        </div>
        <div class="col-md-6">

            <h5 class="font-weight-bold">Details</h5>
            <p>
                <i class="fas fa-map-marker-alt"></i> @Model.Event.Location <br>
                <i class="fas fa-calendar-alt"></i> @Model.Event.Date.ToString("dd.MM.yyyy") <br>
                <i class="fas fa-clock"></i> @Model.Event.StartTime.ToString("HH:mm") - @Model.Event.EndTime.ToString("HH:mm") <br>
                <span class="text-success font-weight-bold">@Model.Event.Price.ToString("C")</span>
            </p>
            <h5 class="font-weight-bold">Description</h5>
            <p>@Model.Event.Description</p>
            @if (Model.Ticket != null)
            {
                <input type="hidden" value="@Model.Ticket.Id"/>
                <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-ticketId="@Model.Ticket.Id" class="btn btn-primary">Add to cart</a>
         
            
            }
           

        </div>
    </div>
</div>



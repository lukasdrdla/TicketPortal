@model List<Event>


@{
ViewData["Title"] = "Home Page";
}

<div class="text-center py-5 bg-light">
    <h1 class="display-4 font-weight-bold">Welcome to TicketPortal</h1>
    <p class="lead text-muted">Find and book tickets for your next unforgettable event.</p>
</div>

@if (User.IsInRole("admin"))
{
<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Create Event</a>
        </div>
    </div>
</div>
}

@if (!User.Identity.IsAuthenticated)
{

<div class="alert alert-warning">
    You must be logged in to view events. <a href="@Url.Action("Login", "Account")">Login here</a>.
</div>
}
else
{
<div class="container my-5">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <a asp-controller="Home" asp-action="Event" asp-route-id="@item.Id" class="text-decoration-none text-black">
                <img src="@item.Image" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title font-weight-bold">@item.Name</h5>
                    <p class="card-text text-muted mb-1">
                        <i class="fas fa-map-marker-alt"></i> @item.Location
                    </p>
                    <p class="card-text text-muted mb-1">
                        <i class="fas fa-calendar-alt"></i> @item.Date.ToString("dd.MM.yyyy")
                    </p>
                    <p class="card-text text-muted mb-3">
                        <i class="fas fa-clock"></i> @item.StartTime.ToString("HH:mm") - @item.EndTime.ToString("HH:mm")
                    </p>
                    <p class="card-text text-success font-weight-bold mb-3">@item.Price.ToString("C")</p>
                    <p class="card-text text-truncate">@item.Description</p>
                    
                   


                </div>
                </a>
            </div>
            
        </div>
        }
    </div>
</div>
}


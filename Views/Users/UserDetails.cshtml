@model TicketPortal.ViewModels.UserDetailsViewModel

@{
ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Detaily Uživatele</h2>
    <div class="card shadow-lg mx-auto" style="max-width: 600px; padding: 20px; border-radius: 10px;">
        <div class="card-header bg-primary text-white text-center">
            <h4><i class="bi bi-person-circle me-2"></i>@Model.User.FirstName @Model.User.LastName</h4>
        </div>
        <div class="card-body">
            <p class="card-text">
                <strong>Email:</strong> @Model.User.Email
            </p>
            <p class="card-text">
                <strong>Telefon:</strong> @Model.User.PhoneNumber
            </p>

            <hr />
            <p class="card-text">
                <strong>Role:</strong>
                @if(Model.Role != null)
                {
                <span class="badge bg-success"> @Model.Role</span>
                }
                else
                {
                <span class="badge bg-secondary">Uživatel</span>
                }
            </p>
        </div>
        <div class="card-footer text-center">
            <a asp-action="UserEdit" asp-controller="Users" asp-route-id="@Model.User.Id" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i> Upravit uživatele
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Zpět na hlavní stránku
            </a>
            <form asp-action="Delete" asp-controller="Users" method="post">
                <input type="hidden" name="id" value="@Model.User.Id"/>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

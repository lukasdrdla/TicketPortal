@model List<AppUser>

@{
    ViewData["Title"] = "Users";

}


<div class="container mt-5">
    <h2 class="text-center mb-4">Users</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="UserDetails" asp-controller="Users" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
</div>


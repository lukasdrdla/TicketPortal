@model Event

@{
ViewData["Title"] = Model.Name;
}

<div class="container my-5">
    <h1 class="display-4 font-weight-bold">@Model.Name</h1>
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Image" class="img-fluid rounded shadow-sm" alt="@Model.Name" style="height: 300px; object-fit: cover;">
        </div>
        <div class="col-md-6">

            <h5 class="font-weight-bold">Details</h5>
            <p>
                <i class="fas fa-map-marker-alt"></i> @Model.Location <br>
                <i class="fas fa-calendar-alt"></i> @Model.Date.ToString("dd.MM.yyyy") <br>
                <i class="fas fa-clock"></i> @Model.StartTime.ToString("HH:mm") - @Model.EndTime.ToString("HH:mm") <br>
                <span class="text-success font-weight-bold">@Model.Price.ToString("C")</span>
            </p>
            <h5 class="font-weight-bold">Description</h5>
            <p>@Model.Description</p>

            <div class="mt-3">

                @if (User.IsInRole("admin"))
                {
                <form asp-action="EventDelete" asp-controller="Events" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id"/>
                    <button type="submit" class="btn btn-danger btn-lg">Delete Event</button>
                </form>

                <a asp-action="EventEdit" asp-controller="Events" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">Edit Event</a>
                }
            </div>
        </div>
    </div>
</div>


